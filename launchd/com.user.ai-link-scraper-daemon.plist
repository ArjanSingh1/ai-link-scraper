<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.ai-link-scraper-daemon</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>/path/to/ai-link-scraper/daemon.py</string>
        <string>--interval</string>
        <string>60</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/path/to/ai-link-scraper</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/path/to/ai-link-scraper/logs/daemon-stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/path/to/ai-link-scraper/logs/daemon-stderr.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
        <!-- Add your environment variables here -->
        <!-- 
        <key>SLACK_BOT_TOKEN</key>
        <string>your-token-here</string>
        <key>OPENAI_API_KEY</key>
        <string>your-key-here</string>
        -->
    </dict>
</dict>
</plist>
